<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.icarus.ikdc" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".IKDCStillCamera"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NoCamera"
            android:label="@string/title_activity_no_camera" >
        </activity>
        <activity
            android:name=".NoSDCard"
            android:label="@string/title_activity_no_sdcard" >
        </activity>
        <activity
            android:name=".Video"
            android:label="@string/title_activity_video"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".TextEditor"
            android:label="@string/title_activity_text_editor"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name=".Audio"
            android:label="@string/title_activity_audio"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".OrganiseActivity"
            android:label="@string/title_activity_organise"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Gallery"
            android:label="@string/title_activity_gallery"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.icarus.ikdc.MainActivity" />
        </activity>
        <activity
            android:name=".Draw"
            android:label="@string/title_activity_draw"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.icarus.ikdc.MainActivity" />
        </activity>
    </application>

</manifest>
